                  }
                },
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/ApiResponse"
                    },
                    {
                      "type": "object",
                      "properties": {
                        "data": {
                          "$ref": "#/components/schemas/ValidationTicket"
                        }
                      }
                    }
                  ]
                }
              }
            }
          }
        },
        "summary": "Get By Id",
        "security": [
          {
            "defaultApiKey": []
          }
        ]
      }
    }
  },
  "webhooks": {
    "/webhook/keynua": {
      "post": {
        "requestBody": {
          "description": "The received webhook data.",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "type",
                  "accountId",
                  "payload"
                ],
                "properties": {
                  "type": {
                    "$ref": "#/components/schemas/WebhookType"
                  },
                  "accountId": {
                    "type": "string"
                  },
                  "payload": {
                    "$ref": "#/components/schemas/WebhookPayload"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "message"
                  ],
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "success"
                    }
                  }
                }
              }
            }
          }
        },
        "summary": "Webhook",
        "tags": [
          "Webhook Keynua Controller"
        ]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "defaultApiKey": {
        "type": "apiKey",
        "description": "20 character string",
        "name": "authorization",
        "in": "header"
      }
    },
    "schemas": {
      "ApiResponse": {
        "type": "object",
        "required": [
          "message"
        ],
        "properties": {
          "message": {
            "type": "string"
          },
          "data": {}
        }
      },
      "ValidationRequestDto": {
        "type": "object",
        "required": [
          "name",
          "phoneNumber",
          "documentType",
          "documentNumber"
        ],
        "properties": {
          "name": {
            "type": "string",
            "maxLength": 50,
            "pattern": "\\S"
          },
          "phoneNumber": {
            "type": "string",
            "minLength": 12,
            "maxLength": 12,
            "pattern": "\\S"
          },
          "documentType": {
            "type": "string",
            "pattern": "pe-dni"
          },
          "documentNumber": {
            "type": "string",
            "pattern": "\\d{8}"
          },
          "successRedirectUrl": {
            "type": "string",
            "format": "uri"
          },
          "failureRedirectUrl": {
            "type": "string",
            "format": "uri"
          }
        }
      },
      "ValidationTicket": {
        "type": "object",
        "required": [
          "name",
          "documentType",
          "documentNumber",
          "publicId",
          "status",
          "partnerChannel",
          "partnerNote",
          "merchantId",
          "successRedirectUrl",
          "failureRedirectUrl"
        ],
        "properties": {
          "id": {
            "type": [
              "string"
            ]
          },
          "name": {
            "type": "string"
          },
          "documentType": {
            "type": "string"
          },
          "documentNumber": {
            "type": "string"
          },
          "publicId": {
            "type": "string",
            "format": "uuid"
          },
          "status": {
            "$ref": "#/components/schemas/ValidationTicketStatus"
          },
          "partnerChannel": {
            "type": "string"
          },
          "partnerNote": {
            "type": "string"
          },
          "merchantId": {
            "type": "string",
            "format": "uuid"
          },
          "successRedirectUrl": {
            "type": "string",
            "format": "uri"
          },
          "failureRedirectUrl": {
            "type": "string",
            "format": "uri"
          }
        }
      },
      "ValidationTicketStatus": {
        "type": "string",
        "enum": [
          "PENDING",
          "FAILED",
          "SUCCESS"
        ]
      },
      "IdentityVerificationCreatedDto": {
        "type": "object",
        "required": [
          "language",
          "reference",
          "contractId",
          "documentNumber",
          "id",
          "accountId",
          "createdAt",
          "accountEmail",
          "organizationId",
          "accountName",
          "title"
        ],
        "properties": {
          "language": {
