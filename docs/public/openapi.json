  "paths": {
    "/business": {
      "post": {
        "parameters": [
          {
            "description": "Flag to enable mock mode",
            "required": false,
            "schema": {
              "type": "boolean",
              "default": false
            },
            "name": "mock",
            "in": "query"
          },
          {
            "description": "The merchant ID in UUID format",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "name": "x-merchant-id",
            "in": "header"
          }
        ],
        "requestBody": {
          "description": "The validation request payload",
          "content": {
            "application/json": {
              "examples": {
                "RequestExample": {
                  "value": {
                    "name": "Juan Perez",
                    "phoneNumber": "+51934567890",
                    "documentType": "pe-dni",
                    "documentNumber": "12345678",
                    "successRedirectUrl": "https://example.com/success",
                    "failureRedirectUrl": "https://example.com/error"
                  }
                }
              },
              "schema": {
                "$ref": "#/components/schemas/ValidationRequestDto"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Identity verification created successfully",
            "content": {
              "application/json": {
                "examples": {
                  "SuccessResponse": {
                    "value": {
                      "message": "success",
                      "data": {
                        "id": "72e7918a-5aaa-4b7c-a471-23c5800c0e4e",
                        "name": "Juan Perez",
                        "documentType": "pe-dni",
                        "documentNumber": "12345678",
                        "publicId": "01971cb5-4751-7582-b256-bbe0df60f0e4",
                        "status": "PENDING",
                        "partnerChannel": "Keynua",
                        "partnerNote": "eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9...",
                        "merchantId": "01890f3b-7c9a-7b4b-8c9a-7b4b8c9a7b4b",
                        "successRedirectUrl": "https://example.com/success",
                        "failureRedirectUrl": "https://example.com/error"
                      }
                    }
                  }
                },
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/ApiResponse"
                    },
                    {
                      "type": "object",
                      "properties": {
                        "data": {
                          "$ref": "#/components/schemas/ValidationRequestDto"
                        }
                      }
                    }
                  ]
                }
              }
            }
          }
        },
        "summary": "Create Identity Verification",
        "tags": [
          "Business Controller"
        ],
        "security": [
          {
            "defaultApiKey": []
          }
        ]
      }
    },
    "/get-state/{publicId}": {
      "get": {
        "tags": [
          "State Validation"
        ],
        "parameters": [
          {
            "description": "The merchant ID associated with the request",
            "name": "x-merchant-id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "in": "header"
          },
          {
            "description": "The public ID of the validation ticket",
            "name": "publicId",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "in": "path"
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved the validation ticket",
            "content": {
              "application/json": {
                "examples": {
                  "SuccessResponse": {
