            "type": "string"
          },
          "documentNumber": {
            "type": "string"
          },
          "id": {
            "type": "string"
          },
          "accountId": {
            "type": "string"
          },
          "createdAt": {
            "type": "string"
          },
          "startedAt": {
            "type": "string"
          },
          "accountEmail": {
            "type": "string"
          },
          "organizationId": {
            "type": "string"
